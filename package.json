{
  "name": "node-pixel-font",
  "version": "1.0.3",
  "description": "NodeJS library written with typescript to draw BitmapFont into node-canvas.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "build": "npm run-script test && tsc -p tsconfig.json",
    "watch": "tsc --watch -p tsconfig.json",
    "execute": "node --experimental-modules --max_old_space_size=2048 ./dist/index.js",
    "run": "npm run-script build && npm run-script execute"
  },
  "author": "Jean-François Desgagné",
  "license": "MIT",
  "dependencies": {
    "canvas": "^2.8.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/jest-image-snapshot": "^4.3.1",
    "@types/node": "^16.9.4",
    "jest": "^27.2.4",
    "jest-image-snapshot": "^4.5.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3"
  }
}
